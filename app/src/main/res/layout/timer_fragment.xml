<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/timer_text"
                android:text="0:00:00"
                android:textSize="64sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/backspace_btn"
                android:background="@drawable/back_space_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <GridLayout
            android:id="@+id/timer_gridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal">

            <Button android:id="@+id/timer_button_1"
                android:text="1"/>
            <Button android:id="@+id/timer_button_2"
                android:text="2"/>
            <Button android:id="@+id/timer_button_3"
                android:text="3"/>
            <Button android:id="@+id/timer_button_4"
                android:text="4"/>
            <Button android:id="@+id/timer_button_5"
                android:text="5"/>
            <Button android:id="@+id/timer_button_6"
                android:text="6"/>
            <Button android:id="@+id/timer_button_7"
                android:text="7"/>
            <Button android:id="@+id/timer_button_8"
                android:text="8"/>
            <Button android:id="@+id/timer_button_9"
                android:text="9"/>
            <Button android:id="@+id/timer_button_0"
                android:layout_column="1"
                android:text="0"/>
        </GridLayout>

        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/timer_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ListView>

        <Button
            android:id="@+id/timer_play_btn"
            android:background="@drawable/play_icon"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>



</RelativeLayout>